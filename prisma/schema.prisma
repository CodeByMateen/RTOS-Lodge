generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  phoneNumber String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Hotel {
  id           String   @id @default(uuid())
  name         String
  address      String
  city         String
  state        String
  country      String
  postal_code  String
  phone_number String
  email        String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
